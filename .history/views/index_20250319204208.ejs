<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Job Application Tracker</title>
        <link rel="stylesheet" href="/public/index.css">
    </head>
    <body>
        <div class="container">
            <h1>Job Application Tracker</h1>
            <a class="add-job">Add New Job</a>
            <table>
                <tr>
                    <th>Company</th>
                    <th>Position</th>
                    <th>Status</th>
                    <th>Date Applied</th>
                    <th>Actions</th>
                </tr>
                <% applications.forEach(job => { %>
                    <tr>
                        <td><%= job.company %></td>
                        <td><%= job.position %></td>
                        <td><%= job.status %></td>
                        <td><%= job.applied_on %></td>
                        <td class="actions">
                            <a href="/edit/<%= job.id %>" class="btn">Edit</a>
                            <a href="/delete/<%= job.id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }); %>
                
            </table>
        </div>
    </body>
</html>